{# src/p6/CoreBundle/Resources/views/Advert/index.html.twig #}
{% extends "p6CoreBundle::layout.html.twig" %}
{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<section id="tricks">

<div class="container mobile">
{% for trick in tricklist %}
    <div class="row trickblock">
        <div class="col-xs-offset-1 col-xs-10 minitest"></div>
        <div class="col-xs-offset-1 col-xs-6 merribold">{{ trick.name }}</div>
        <div class="col-xs-2"><i class="fas fa-pen blue"></i></div>
        <div class="col-xs-2"><i class="far fa-trash-alt red"></i></div>
    </div>
    {% endfor %}
</div>

<div class="container desktop">
    <div class="row">
{% set nbtrick = 5 %}
{% for trick in tricklist|slice(0, nbtrick) %}
        <div class="col-sm-2 trickblock">
            <div class="row">
                <div class="col-sm-12 minitest"></div>
            </div>
            <div class="row">
                <div class="col-sm-6 merribold">{{ trick.name }}</div>
                <div class="col-sm-3"><i class="fas fa-pen blue"></i></div>
                <div class="col-sm-3"><i class="far fa-trash-alt red"></i></div>
            </div>
        </div>
    {% endfor %}
    <div class="col-sm-12 merribold" style="text-align:center;">Voir plus</div>
    </div>
</div>

</section>
{% endblock %}
